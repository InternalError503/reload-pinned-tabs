{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "windows": {
        "command": "${workspaceRoot}/runTask.bat"
    },
    "isShellCommand": true,
    "showOutput": "always",
    "args": [],
    "tasks": [
        {
            "taskName": "build",
            "isBuildCommand": true,
            "showOutput": "always"
        },
        {
            "taskName": "test",
            "isBuildCommand": true,
            "showOutput": "always"
        },
        {
            "taskName": "run",
            "isBuildCommand": true,
            "showOutput": "always"
        },       
        {
            "taskName": "sign",
            //Important if sharing the code or commiting to public repo remove API keys.
            "args": ["API key", "API Secret Key"],
            "isBuildCommand": true,
            "showOutput": "always"
        }
    ]
}